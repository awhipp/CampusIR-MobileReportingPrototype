<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rzepka.hsiao.whipp.campusir" >

    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.rzepka.hsiao.whipp.campusir.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rzepka.hsiao.whipp.campusir.MenuActivity"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name="com.rzepka.hsiao.whipp.campusir.NewReport"
            android:label="@string/title_activity_new_report"
            android:windowSoftInputMode="stateHidden"
            >
        </activity>
        <activity
            android:name="com.rzepka.hsiao.whipp.campusir.MyReports"
            android:label="@string/title_activity_my_reports" >
        </activity>
    </application>

</manifest>
